@page "/agregarusuario"

<h3>Agregar_Usuario</h3>

<div></div>
<div></div>

<h6>Ingrese los datos del usuario que desea agregar:</h6>

<form>
    <fieldset>

        <div class="row content">
            <div class="col-md-2">
                <label for="idusuario">ID Usuario</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="number" name="idusuario" id="idusuario">
            </div>
        </div>

        <div class="row content">
            <div class="col-md-2">
                <label for="nombre">Nombre del Usuario</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="text" name="nombre" id="nombre">
            </div>
        </div>

        <div class="row content">
            <div class="col-md-2">
                <label for="apellido">Apellido del Usuario</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="text" name="apellido" id="apellido">
            </div>
        </div>

        <div class="row content">
            <div class="col-md-2">
                <label for="telefono">Numero de Telefono</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="number" name="telefono" id="telefono">
            </div>
        </div>

        <div class="row content">
            <div class="col-md-2">
                <label for="direccion">Direccion del Usuario</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="text" name="direccion" id="direccion">
            </div>
        </div>

        <div class="row content">
            <div class="col-md-2">
                <label for="password">Contraseña</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="text" name="password" id="password">
            </div>
        </div>

        <div class="row content">
            <div class="col-md-2">
                <label for="confirm">Confirmar Contraseña</label>
            </div>

            <div class="col-md-4">
                <input class="form-control" type="text" name="confirm" id="confirm">
            </div>
        </div>

    </fieldset>
</form>

<div></div>

<div class="row content">
    <button type="submit" onclick="alert('Usuario Agregado Exitosamente');">Agregar Usuario</button>
</div>